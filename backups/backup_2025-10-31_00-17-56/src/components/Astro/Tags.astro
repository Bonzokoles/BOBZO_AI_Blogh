---
/*
 * Component for rendering a collection of Tag components in a flexible layout.
 *
 * Props:
 * - tags: string[] - Array of tag strings to display
 * - class?: string - Optional CSS classes
 *
 * Example usage:
 * <Tags tags={["javascript", "typescript", "react"]} />
 * <Tags
 *   tags={["astro", "vue", "svelte"]}
 *   class="my-custom-tags"
 * />
 * <Tags tags={[]} />
 *
 * Notes:
 * - Renders multiple Tag components in a flex container
 * - Automatically handles wrapping for responsive layouts
 * - Uses xs size for individual tags by default
 * - Customizable through class prop
 * - Zero-margin container for better layout control
 */

import Tag from "@components/Astro/utils/Tag.astro";

interface Props {
  // Array of tag strings to display //
  tags: string[];
  // Optional CSS classes //
  class?: string | undefined;
}

const { class: className, tags } = Astro.props;
---

<div class:list={["flex, flex-wrap, mx-0, px-0", className]}>
  {tags.map((tag) => <Tag tag={tag} size="xs" />)}
</div>
