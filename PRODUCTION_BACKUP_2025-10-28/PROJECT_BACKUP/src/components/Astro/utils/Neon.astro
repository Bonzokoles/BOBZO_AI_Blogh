---
/* Component for creating neon text effects with animations.
 *
 * Props:
 * - titleText?: string - Text content
 * - class?: string - Additional CSS classes
 *
 * Example usage:
 * <Neon titleText="Glowing Text" />
 *
 * Notes:
 * - CSS text-shadow effects
 * - Flicker animation
 * - Theme accent colors
 * - Custom slot support
 * - Smooth transitions
 */

interface Props {
	// Text content for the neon effect //
	titleText?: string;
	// Additional CSS classes //
	class?: string |  undefined;
}

const { titleText = null, class: className } = Astro.props;
---

<span
	class:list={["neon", className]}
	data-text={titleText}
	title={titleText}
>
	<slot name="neon">
		{titleText}
	</slot>
</span>
