---
/* Component for rendering accessible emoji characters.
 *
 * Props:
 * - symbol: string - The emoji character to display
 * - label?: string - Accessible description (optional)
 * - class?: string - Additional CSS classes
 *
 * Example usage:
 * <Emoji
 *   symbol="⭐"
 *   label="star rating"
 *   class="text-2xl"
 * />
 *
 * Notes:
 * - Automatically handles ARIA attributes
 * - Decorative emojis hidden from screen readers when no label
 * - Semantic role="img" for accessibility
 * - Supports custom styling
 */

interface Props {
  // The emoji character to display //
  symbol: string & {};
  //
   // Accessible label for the emoji. If not provided,
   // the emoji will be hidden from screen readers.
   //
  label?: string;
  // Optional CSS classes //
  class?: string | undefined
}

const { label, symbol, class: className } = Astro.props;
---

<span
  class:list={className}
  aria-label={label}
  aria-hidden={label ? undefined : 'true'}
  role="img"
>{symbol}</span>
