---
import Card from "@components/Astro/Card.astro";
import PageHeader from "@components/Astro/PageHeader.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const description =
  "Najnowsze wiadomości ze świata sztucznej inteligencji - trendy, przełomy technologiczne i analiza rynku AI.";
---

<Layout title="Wiadomości AI - MyBonzo AI Blog" description={description}>
  <PageHeader
    heading="Wiadomości AI"
    description={description}
    animate={true}
  />

  <section class="container mx-auto px-4 py-16">
    <div class="text-center mb-16">
      <Icon
        name="ri:newspaper-line"
        class="w-24 h-24 mx-auto mb-6 text-theme-primary"
      />
      <h2 class="text-3xl font-bold mb-6 text-theme-primary">
        AI News & Trendy
      </h2>
      <p class="text-xl text-theme-primary opacity-80 max-w-4xl mx-auto">
        Bądź na bieżąco z najważniejszymi wydarzeniami w świecie sztucznej
        inteligencji.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      <Card
        title="Przełomy Technologiczne"
        description="Najnowsze osiągnięcia w dziedzinie AI - nowe modele, algorytmy i możliwości."
        shadowSize="lg"
        iconName="ri:rocket-line"
      />
      <Card
        title="Rynek & Biznes"
        description="Analiza rynku AI, fuzje i przejęcia, nowe inwestycje w branży technologicznej."
        shadowSize="lg"
        iconName="ri:line-chart-line"
      />
      <Card
        title="Regulacje & Prawo"
        description="Nowe przepisy dotyczące AI, dyskusje o etyce i bezpieczeństwie sztucznej inteligencji."
        shadowSize="lg"
        iconName="ri:scales-3-line"
      />
      <Card
        title="Badania Naukowe"
        description="Najnowsze publikacje z laboratoriów badawczych i uniwersytetów na całym świecie."
        shadowSize="lg"
        iconName="ri:microscope-line"
      />
      <Card
        title="Przemysł & Zastosowania"
        description="Jak AI zmienia różne branże - od medycyny po transport i finanse."
        shadowSize="lg"
        iconName="ri:building-line"
      />
      <Card
        title="Społeczeństwo & Kultura"
        description="Wpływ sztucznej inteligencji na życie codzienne, sztukę i kulturę."
        shadowSize="lg"
        iconName="ri:community-line"
      />
    </div>

    <div class="bg-theme-primary/5 rounded-2xl p-8 text-center">
      <h3 class="text-2xl font-bold mb-4 text-theme-primary">Aktualności AI</h3>
      <p class="text-lg text-theme-primary opacity-80 mb-6">
        Wkrótce znajdziesz tutaj codziennie aktualizowane wiadomości ze świata
        sztucznej inteligencji.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/blog"
          class="inline-block bg-theme-accent text-white px-8 py-4 rounded-lg font-semibold hover:opacity-90 transition-opacity shadow-lg"
        >
          Zobacz Blog →
        </a>
        <a
          href="/pro"
          class="inline-block border-2 border-theme-accent text-theme-accent px-8 py-4 rounded-lg font-semibold hover:bg-theme-accent hover:text-white transition-all"
        >
          MyBonzo Pro →
        </a>
      </div>
    </div>
  </section>
</Layout>
