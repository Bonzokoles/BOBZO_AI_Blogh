---
import Heading from "@components/Astro/Heading.astro";
import Link from "@components/Astro/Link.astro";
import BackgroundPattern from "@components/elements/BackgroundPattern.astro";
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";

// Pobierz wszystkie wpisy blog
const posts = await getCollection("blog");
const recentPosts = posts
  .filter((post) => !post.data.isDraft)
  .sort(
    (a, b) =>
      new Date(b.data.pubDatetime).getTime() -
      new Date(a.data.pubDatetime).getTime()
  )
  .slice(0, 6);
---

<Layout
  title="Blog"
  description="Najnowsze artykuły o AI, poradniki i praktyczne rozwiązania dla domu"
>
  <BackgroundPattern />

  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <Heading level={1} class="text-4xl font-bold mb-4"
          >MyBonzo AI Blog</Heading
        >
        <p class="text-lg text-gray-700 dark:text-gray-300 max-w-2xl mx-auto">
          Praktyczne porady, narzędzia AI i rozwiązania dla całej rodziny. Bez
          technicznego żargonu - po prostu działa!
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          recentPosts.map((post) => (
            <article class="border border-gray-500 bg-transparent rounded-none overflow-hidden hover:border-blue-400 hover:bg-gray-900 hover:shadow transition-colors">
              {post.data.image && (
                <div class="aspect-video bg-gray-200 dark:bg-gray-700">
                  <img
                    src={post.data.image.src}
                    alt={post.data.image.alt || post.data.title}
                    class="w-full h-full object-cover"
                  />
                </div>
              )}

              <div class="p-6">
                <div class="flex flex-wrap gap-2 mb-3">
                  {post.data.tags?.slice(0, 2).map((tag) => (
                    <span class="px-2 py-1 bg-blue-600 text-white text-xs rounded-none font-semibold tracking-wide uppercase">
                      {tag}
                    </span>
                  ))}
                </div>

                <Heading
                  level={3}
                  class="text-xl font-semibold mb-2 line-clamp-2 text-theme-primary"
                >
                  {post.data.title}
                </Heading>

                <p class="text-theme-primary opacity-80 text-sm mb-3 line-clamp-3">
                  {post.data.description}
                </p>

                <div class="flex justify-between items-center text-sm text-theme-primary opacity-70 mb-4">
                  <time datetime={post.data.pubDatetime}>
                    {new Date(post.data.pubDatetime).toLocaleDateString(
                      "pl-PL"
                    )}
                  </time>
                  {post.data.isFeatured && (
                    <span class="px-2 py-1 bg-yellow-600 text-white text-xs rounded-none font-semibold">
                      Wyróżniony
                    </span>
                  )}
                </div>

                <Link
                  href={`/blog/${post.id}`}
                  text="Czytaj więcej →"
                  class="text-theme-primary font-semibold hover:text-white transition-colors"
                />
              </div>
            </article>
          ))
        }
      </div>

      <div class="text-center mt-12">
        <Link
          href="/blog/1"
          text="Zobacz wszystkie artykuły"
          class="bg-theme-accent text-white px-6 py-3 rounded-none font-semibold hover:opacity-90 transition-opacity border border-gray-500"
        />
      </div>
    </div>
  </section>
</Layout>
