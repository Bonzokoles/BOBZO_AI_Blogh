---
import Layout from "@layouts/Layout.astro";
---

<Layout
  title="MyBonzo Pro"
  description="Profesjonalna platforma AI MyBonzo Pro - narzędzia biznesowe"
>
  <div class="container mx-auto px-4 py-16">
    <section
      class="text-center bg-theme-primary/5 backdrop-blur-sm rounded-2xl p-8"
    >
      <h1 class="text-4xl font-bold mb-8 text-theme-primary">
        Sprawdź MyBonzo Pro
      </h1>
      <video
        controls
        src="https://pub-25059caf15274ebd844548094bfb4dc1.r2.dev/mybonzo123.mp4"
        style="max-width:600px; width:100%; border-radius: 12px; box-shadow: 0 10px 25px rgba(0,0,0,0.15);"
      >
      </video>
      <div class="mt-8">
        <p class="text-lg mb-4 text-theme-primary opacity-80">
          <strong>Przejdź do pełnej wersji:</strong>
        </p>
        <a
          href="https://www.mybonzo.com"
          target="_blank"
          class="inline-block bg-theme-accent text-white px-8 py-4 rounded-lg font-semibold hover:opacity-90 transition-opacity shadow-lg text-lg"
        >
          Przejdź do głównej wersji MyBonzo Pro →
        </a>
      </div>
    </section>
  </div>
</Layout>
