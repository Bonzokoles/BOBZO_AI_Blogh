---
import Card from "@components/Astro/Card.astro";
import PageHeader from "@components/Astro/PageHeader.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const description =
  "Najlepsze narzędzia sztucznej inteligencji - odkryj AI tools które rewolucjonizują sposób pracy i twórczości.";
---

<Layout title="Narzędzia AI - MyBonzo AI Blog" description={description}>
  <PageHeader heading="Narzędzia AI" description={description} animate={true} />

  <section class="container mx-auto px-4 py-16">
    <div class="text-center mb-16">
      <Icon
        name="ri:robot-line"
        class="w-24 h-24 mx-auto mb-6 text-theme-primary"
      />
      <h2 class="text-3xl font-bold mb-6 text-theme-primary">
        Sztuczna Inteligencja w Akcji
      </h2>
      <p class="text-xl text-theme-primary opacity-80 max-w-4xl mx-auto">
        Poznaj najnowsze narzędzia AI które mogą zmienić sposób w jaki
        pracujesz, tworzysz i się uczysz.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      <Card
        title="Generatory Tekstu"
        description="ChatGPT, Claude, Gemini i inne AI do pisania, tłumaczenia i analizy treści."
        shadowSize="lg"
        iconName="ri:quill-pen-line"
      />
      <Card
        title="Generatory Grafik"
        description="DALL-E, Midjourney, Stable Diffusion - stwórz niesamowite obrazy z opisów tekstowych."
        shadowSize="lg"
        iconName="ri:image-line"
      />
      <Card
        title="Edytory Video"
        description="AI-powered narzędzia do montażu filmów, tworzenia animacji i efektów specjalnych."
        shadowSize="lg"
        iconName="ri:video-line"
      />
      <Card
        title="Asystenci Kodu"
        description="GitHub Copilot, Cursor, Replit AI - programowanie z pomocą sztucznej inteligencji."
        shadowSize="lg"
        iconName="ri:code-line"
      />
      <Card
        title="Analiza Danych"
        description="Narzędzia AI do przetwarzania dużych zbiorów danych i tworzenia raportów."
        shadowSize="lg"
        iconName="ri:bar-chart-box-line"
      />
      <Card
        title="Automatyzacja"
        description="Zapier AI, Make.com i inne platformy do automatyzacji procesów biznesowych."
        shadowSize="lg"
        iconName="ri:settings-3-line"
      />
    </div>

    <div
      class="bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 rounded-2xl p-8 text-center"
    >
      <h3 class="text-2xl font-bold mb-4 text-theme-primary">
        MyBonzo Pro - Twój AI Asystent
      </h3>
      <p class="text-lg text-theme-primary opacity-80 mb-6">
        Sprawdź nasze własne narzędzie AI zaprojektowane specjalnie dla polskich
        użytkowników.
      </p>
      <a
        href="/pro"
        class="inline-block bg-theme-accent text-white px-8 py-4 rounded-lg font-semibold hover:opacity-90 transition-opacity shadow-lg mr-4"
      >
        Zobacz MyBonzo Pro →
      </a>
      <a
        href="/ai-tools"
        class="inline-block border-2 border-theme-accent text-theme-accent px-8 py-4 rounded-lg font-semibold hover:bg-theme-accent hover:text-white transition-all"
      >
        Więcej AI Tools →
      </a>
    </div>
  </section>
</Layout>
