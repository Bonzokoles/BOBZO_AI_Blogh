<script>
  // Video controls for MyBonzo Pro page
  const video = document.getElementById("proVideo") as HTMLVideoElement;
  const playBtn = document.getElementById("playBtnPro");
  const pauseBtn = document.getElementById("pauseBtnPro");
  const stopBtn = document.getElementById("stopBtnPro");
  const volumeBtn = document.getElementById("volumeBtnPro");
  const playOverlay = document.getElementById("playOverlayPro");

  // Initialize video with sound OFF
  if (video) {
    video.muted = true;
    video.volume = 0.8;
  }

  // Play button
  playBtn?.addEventListener("click", () => {
    if (video) {
      video.muted = false;
      video.play();
      playBtn.classList.add("hidden");
      pauseBtn?.classList.remove("hidden");
    }
  });

  // Pause button
  pauseBtn?.addEventListener("click", () => {
    video?.pause();
    pauseBtn.classList.add("hidden");
    playBtn?.classList.remove("hidden");
  });

  // Stop button
  stopBtn?.addEventListener("click", () => {
    if (video) {
      video.pause();
      video.currentTime = 0;
      video.muted = true;
      pauseBtn?.classList.add("hidden");
      playBtn?.classList.remove("hidden");
    }
  });

  // Volume button
  volumeBtn?.addEventListener("click", () => {
    if (video && volumeBtn) {
      video.muted = !video.muted;
      volumeBtn.textContent = video.muted ? "üîá" : "üîä";
    }
  });

  // Click on overlay to start video
  playOverlay?.addEventListener("click", () => {
    if (video) {
      video.muted = false;
      video.play();
      playOverlay.style.opacity = "0";
      setTimeout(() => {
        playOverlay.style.display = "none";
      }, 300);
      playBtn?.classList.add("hidden");
      pauseBtn?.classList.remove("hidden");
    }
  });

  // When video ends
  video?.addEventListener("ended", () => {
    if (video) {
      video.muted = true;
      pauseBtn?.classList.add("hidden");
      playBtn?.classList.remove("hidden");
    }
  });

  // Update buttons when video state changes
  video?.addEventListener("play", () => {
    playBtn?.classList.add("hidden");
    pauseBtn?.classList.remove("hidden");
  });

  video?.addEventListener("pause", () => {
    pauseBtn?.classList.add("hidden");
    playBtn?.classList.remove("hidden");
  });
</script>
