</Layout>

<style>
  .ai-chat-page-shell {
    max-width: 960px;
    margin: 0 auto;
    padding: 0 1.5rem 4rem;
    display: grid;
    gap: 2.5rem;
  }

  .ai-chat-info-card {
    border-radius: 1.5rem;
    padding: 2rem;
    border: 1px solid color-mix(in srgb, var(--color-accent) 35%, transparent);
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-background) 88%, transparent) 0%,
      rgba(0, 0, 0, 0.05) 100%
    );
    box-shadow: 0 25px 50px rgba(8, 10, 18, 0.12);
    display: grid;
    gap: 1.25rem;
  }

  .ai-chat-info-card h3 {
    font-size: clamp(1.25rem, 1.8vw, 1.5rem);
    margin: 0;
    color: var(--color-accent);
  }

  .ai-chat-info-card p {
    margin: 0;
    color: color-mix(
      in srgb,
      var(--color-text) 80%,
      var(--color-background) 20%
    );
    line-height: 1.65;
  }

  .ai-chat-info-card ul {
    margin: 0;
    padding-left: 1.2rem;
    display: grid;
    gap: 0.65rem;
    color: color-mix(
      in srgb,
      var(--color-text) 85%,
      var(--color-background) 15%
    );
    line-height: 1.6;
  }

  .ai-chat-info-card li {
    position: relative;
  }

  .ai-chat-info-card li strong {
    display: block;
    font-weight: 600;
    color: color-mix(
      in srgb,
      var(--color-accent) 85%,
      var(--color-background) 15%
    );
  }

  .ai-chat-info-card li span {
    display: block;
    margin-top: 0.25rem;
  }

  .ai-chat-info-card li em {
    display: block;
    margin-top: 0.25rem;
    font-style: normal;
    color: color-mix(
      in srgb,
      var(--color-accent) 75%,
      var(--color-background) 25%
    );
  }

  @media (max-width: 640px) {
    .ai-chat-info-card {
      padding: 1.5rem;
    }
  }
</style>
